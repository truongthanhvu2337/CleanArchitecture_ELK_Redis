{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "local": "Server=(local);Uid=sa;password=12345;Initial Catalog=Demo;MultipleActiveResultSets=True;Encrypt=False"
  },
  "Redis": {
    "InstanceName": "CacheEvent",
    "HostName": "localhost:6379",
    //"Password": "12345",
    "TimeToLive": 10
  },
  "JWTSetting": {
    "Securitykey": "boiviemtinhtevaemthongminh,datniemtinhetvaoanhkhianhkhongtin",
    "Issuer": "localhost",
    "Audience": "localhost",
    "TokenExpirationInMinutes": 30,
    "RefreshTokenValidityInMonths": 1
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "System": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Literate, Serilog.Sinks.Console",
          "outputTemplate": "[{Timestamp:dd/MM/yyyy hh:mm:ss tt} {Level:u3}] {Message:lj} {NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "[{Timestamp:yyyy/MM/dd HH:mm:ss}] [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },


  "AllowedHosts": "*"
}
